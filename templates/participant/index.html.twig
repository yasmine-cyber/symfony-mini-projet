{% extends 'base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
            <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Bienvenue, {{ app.user.nom }} !</h1>
            <h2 class="text-xl font-semibold mb-4">Liste des événements</h2>
            {% if evenements|length > 0 %}
                <ul class="space-y-2">
                    {% for evenement in evenements %}
                        <li>{{ evenement.nom }} - {{ evenement.date|date('d/m/Y') }}</li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>Aucun événement disponible.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}